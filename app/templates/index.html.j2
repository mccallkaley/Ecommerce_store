{% extends 'base.html.j2' %}
{% block title %}
  User Greeting
{% endblock %}

{% block content %}
  <h1>Hello There! Welcome to my Makeup Store!</h1>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height: 450px">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/static/product_pics/smashed_eye.JPG" class="rounded mx-auto w-25 h-25 d-block"  alt="..." >
    </div>
    <div class="carousel-item">
      <img src="/static/product_pics/smashed_eye.JPG" class="rounded mx-auto w-25 h-25 d-block" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/static/product_pics/red_lips_woman.JPG" class="rounded mx-auto w-25 h-25 d-block" alt="...">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="jumbotron">
  <h1 class="display-4">Subscription Service</h1>
  <p class="lead">Makeup catered to artists</p>
  <!-- <hr class="my-4"> -->
  
</div>

  <div class="container">
    <div class="row">
      <div class="col-md">
        <img src="/static/product_pics/lipstick.JPG" class="d-block w-100" alt="...">
      </div>
      <div class="col-md">
        <h1>Lipstick bundle</h1>
        <p>$40.00</p>
        <form>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputDelivArea">Delivery Area</label>
              <select id="inputDelivArea" class="form-control">
                <option selected>Choose...</option>
                <option>Salt Lake City</option>
                <option>Orem</option>
                <option>Bountiful</option>
              </select>
            </div>
            <div class="form-group col-md-6">
              <label for="inputSize">Size</label>
              <select id="inputSize" class="form-control">
                <option selected>2 Pack</option>
                <option>4 Pack</option>
                <option>6 Pack</option>
              </select>
            </div>
          </div>
          <h2>Subscribe!</h2>
          <p>1 lipstick bundle every month</p>
          <button type="submit" class="btn btn-primary">Add Subscription to cart</button>
        </form>
      </div>
    </div>
  </div>


{% endblock content %}
